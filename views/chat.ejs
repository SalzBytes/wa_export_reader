<!DOCTYPE html>
<html>

<head>
    <title>WhatsApp Export Reader</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.4/css/bulma.min.css">
    <link rel="stylesheet" href="/app.css" type="text/css" />
</head>

<body>
    <div class="columns is-gapless" style="height:100vh; overflow:hidden;">

        <!-- SIDEBAR -->
        <aside class="column is-narrow" style="
      width:280px;
      background:#111b21;
      color:#e9edef;
    ">
            <div class="p-4">
                <h4 class="title is-6 has-text-white">Uploaded Chats</h4>
                <!-- list -->
            </div>
        </aside>

        <!-- CHAT AREA -->
        <section class="column" style=" display:flex; flex-direction:column; background:#efeae2; ">

            <!-- HEADER -->
            <header class="px-4 py-2" style=" background:#202c33; color:#e9edef; flex-shrink:0; ">
                <div class="is-flex is-align-items-center is-justify-content-space-between">
                    <strong>WhatsApp Export Viewer</strong>
                    <span id="currentShowingDate" class="tag is-info is-light" style="pointer-events:none; ">Current Date</span>
                </div>
            </header>

            <div class="flex gap-2 mb-4">
                <input id="searchInput" placeholder="Search chat..." class="flex-1 p-2 rounded">
                <button id="searchBtn" class="bg-white px-3 rounded shadow">
                    Cari
                </button>
            </div>

            <!-- LOAD OLDER -->
            <div class="has-text-centered py-2" style="flex:0 0 40px;">
                <button id="loadOlder" data-page="1" type="button" class="button is-small is-link is-light">
                    Load older messages
                </button>
            </div>

            <!-- ðŸ”¥ CHAT SCROLL AREA -->
            <!-- CHAT SCROLL AREA -->
            <div id="chatContainer" class="p-4" style=" flex:1; overflow-y:auto; padding:24px 0; ">
                <div style=" max-width:860px; margin:0 auto; padding:0 16px; ">
                    <%- include('partials/message-list', { messages }) %>
                </div>
            </div>

        </section>
    </div>

    <script src="/app.js"></script>
    <script>
        const CHAT_ID = "<%= extractId %>";
        const FILTER = "<%= filter %>";
    </script>
    <script src="/chat.js"></script>
</body>

</html>